From 3fcb7a7aa6c040265bee5701dc309bd82f7ba58d Mon Sep 17 00:00:00 2001
From: Gennaro Tortone <gennaro.tortone@na.infn.it>
Date: Fri, 21 Feb 2025 15:52:45 +0000
Subject: [PATCH] add default environment

Signed-off-by: Gennaro Tortone <gennaro.tortone@na.infn.it>
---
 default-uEnv.txt | 16 ++++++++++++++++
 1 file changed, 16 insertions(+)
 create mode 100644 default-uEnv.txt

diff --git a/default-uEnv.txt b/default-uEnv.txt
new file mode 100644
index 0000000000..eb024f7900
--- /dev/null
+++ b/default-uEnv.txt
@@ -0,0 +1,23 @@
+sfp0_en=gpio@ff0a000049
+sfp1_en=gpio@ff0a000048
+sfp2_en=gpio@ff0a000047
+vin_alert=gpio@ff0a000050
+12v_alert=gpio@ff0a000051
+mode_address=0xa0110018
+init_gpio=gpio clear ${sfp0_en} ; gpio clear ${sfp1_en} ; gpio clear ${sfp2_en} ; gpio input ${vin_alert} ; gpio input ${12v_alert}
+init_sfp=setexpr.b v *${mode_address}; if test $v -eq 0x00; then echo "SFP0: ethernet, SFP1: timing" ; gpio set ${sfp0_en} ; gpio set ${sfp1_en}; gpio clear ${sfp2_en} ; fi ; if test $v -eq 0x01; then echo "SFP1: timing, SFP2: ethernet" ; gpio clear ${sfp0_en} ; gpio set ${sfp1_en}; gpio set ${sfp2_en}; fi ; if test $v -eq 0x10; then echo "SFP0: ethernet, SFP2: timing" ; gpio set ${sfp0_en} ; gpio clear ${sfp1_en}; gpio set ${sfp2_en}; fi ;
+download_uenv=dhcp ; tftpboot ${load_address} /mcc/uenv.txt
+autoload=no
+nc=setenv stdout nc;setenv stdin nc
+bootdelay=5
+preboot=echo ETH0 MAC address: ${ethaddr}; echo SFP MAC address: ${eth10addr}; run download_uenv ; run init_gpio; run init_sfp
+ethprime=ethernet@a00c0000
+bootargs=earlycon clk_ignore_unused cpuidle.off=1 uio_pdrv_genirq.of_id=generic-uio nr_cpus=2 net.ifnames=0
+load_address=0x2000000
+devicetree_load_address=0x2000000
+kernel_load_address=0x2080000
+initrd_load_address=0x5000000
+bootnet=dhcp && tftpboot ${kernel_load_address} /mcc/Image && tftpboot ${devicetree_load_address} /mcc/system.dtb && tftpboot ${initrd_load_address} /mcc/rootfs.cpio.gz && booti ${kernel_load_address} ${initrd_load_address} ${devicetree_load_address}
+bootmmc=setenv bootargs ${bootargs} root=/dev/mmcblk0p1 rw rootwait braddr=${eth10addr} && load mmc 0 ${kernel_load_address} /boot/Image && load mmc 0 ${devicetree_load_address} /boot/system.dtb && setenv eth10addr 00:0a:35:00:00:0A && booti ${kernel_load_address} - ${devicetree_load_address}
+bootmedia=mmc
+bootcmd=run boot${bootmedia}
+flash_bootbin=tftpboot 0x09000000 /mcc/BOOT.BIN && sf probe 0 0 0 && sf erase 0 0x4000000 && sf write 0x09000000 0 ${filesize}
+verify_bootbin=tftpboot 0x09000000 /mcc/BOOT.BIN && sf probe 0 0 && sf read 0xA000000 0 ${filesize} && cmp.b 0x09000000 0xA000000 ${filesize}
